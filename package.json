{
  "name": "@topplethenun/eslint-config",
  "version": "0.0.2",
  "description": "ESLint config for Richard Harrah's projects",
  "author": "Richard Harrah",
  "license": "MIT",
  "packageManager": "pnpm@7.27.0",
  "engines": {
    "node": "^14 || ^16 || >=18"
  },
  "main": "./index.js",
  "files": [
    "main.js",
    "LICENSE"
  ],
  "keywords": [
    "eslint"
  ],
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --format stylish --max-warnings 0 --cache .",
    "lint:fix": "eslint --format stylish --max-warnings 0 --cache . --fix",
    "postpublish": "rm -rf ./package",
    "prepare": "is-ci || husky install",
    "prepublishOnly": "rm -rf ./package && clean-publish",
    "release": "bumpp && pnpm publish"
  },
  "peerDependencies": {
    "eslint": "^8.21.0",
    "typescript": "^4.9.0"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "5.55.0",
    "@typescript-eslint/parser": "5.55.0",
    "eslint-plugin-simple-import-sort": "10.0.0"
  },
  "devDependencies": {
    "@antfu/ni": "0.20.0",
    "bumpp": "^9.0.0",
    "clean-publish": "^4.1.1",
    "eslint": "8.36.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "prettier": "2.8.4",
    "prettier-plugin-pkg": "0.17.1",
    "typescript": "4.9.5"
  },
  "publishConfig": {
    "directory": "package"
  },
  "clean-publish": {
    "withoutPublish": true,
    "tempDir": "package"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-pkg"
    ]
  }
}
